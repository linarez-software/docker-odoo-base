<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_form_view">
            <field name="name">linasoft_product_confia.product_template_form </field>
            <field name="model">product.template</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <sheet name="sheet1_product_confia">
                            <h6>Principal</h6>
                            <hr/>
                            <group>
                                <field name="name" />
                                <field name="description" />
                            </group>
                            <h6>Alterno</h6>
                            <hr/>
                            <group>
                                <field name="hs_code_id"/>
                                <field name="description" />
                            </group>
                        </sheet>

                        <sheet name="sheet2_product_confia">
                            <h6>Clasificaci√≥n</h6>
                            <hr/>
                            <group>
                                <field name="product_brand_id" />
                            </group>
                        </sheet>
                        <notebook>
                            <page>
                                <field name="tree_view_price">
                                    <tree>
                                        <field name="name"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo> 
            